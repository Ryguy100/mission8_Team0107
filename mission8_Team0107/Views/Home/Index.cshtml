@{
    ViewData["Title"] = "Home Page";
}

@model List<TaskEntity>


<div class="container">
    <div class="row">
        <div class="col"><h1>Stephen Covey's Time Management Matrix</h1></div>
    </div>
    <div class="row">
        <div class="col-1"></div>
        <div class="col-2 bordered-col"></div>
        <div class="col-4 bordered-col"><h3>URGENT</h3></div>
        <div class="col-4 bordered-col"><h3>NOT URGENT</h3></div>
        <div class="col-1"></div>
    </div>
    <div class="row">
        <div class="col-1"></div>
        <div class="col-2 bordered-col"><h3>IMPORTANT</h3></div>
        <div class="col-4 bordered-col">
            <ul>
                @foreach (var x in Model)
                {
                    if (x.Quadrant == 1 && x.IsCompleted == false)
                    {
                        <li>
                            @x.TaskName @x.DueDate
                            <a class="btn btn-outline-dark btn-sm" asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskId">Edit</a>
                            <a class="btn btn-outline-danger btn-sm" asp-controller="Home" asp-action="Delete" asp-route-id="@x.TaskId">Delete</a>
                        </li>
                    }
                }
            </ul>
        </div>
        <div class="col-4 bordered-col">
            <ul>
                @foreach (var x in Model)
                {
                    if (x.Quadrant == 2 && x.IsCompleted == false)
                    {
                        <li>
                            @x.TaskName @x.DueDate
                            <a class="btn btn-outline-dark btn-sm" asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskId">Edit</a>
                            <a class="btn btn-outline-danger btn-sm" asp-controller="Home" asp-action="Delete" asp-route-id="@x.TaskId">Delete</a>
                        </li>
                    }
                }
            </ul>
        </div>
        <div class="col-1"></div>
    </div>
    <div class="row">
        <div class="col-1"></div>
        <div class="col-2 bordered-col"><h3>NOT IMPORTANT</h3></div>
        <div class="col-4 bordered-col">
            <ul>
                @foreach (var x in Model)
                {
                    if (x.Quadrant == 3 && x.IsCompleted == false)
                    {
                        <li>
                            @x.TaskName @x.DueDate
                            <a class="btn btn-outline-dark btn-sm" asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskId">Edit</a>
                            <a class="btn btn-outline-danger btn-sm" asp-controller="Home" asp-action="Delete" asp-route-id="@x.TaskId">Delete</a>
                        </li>
                    }
                }
            </ul>
        </div>
        <div class="col-4 bordered-col">
            <ul>
                @foreach (var x in Model)
                {
                    if (x.Quadrant == 4 && x.IsCompleted == false)
                    {
                        <li>
                            @x.TaskName @x.DueDate
                            <a class="btn btn-outline-dark btn-sm" asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskId">Edit</a>
                            <a class="btn btn-outline-danger btn-sm" asp-controller="Home" asp-action="Delete" asp-route-id="@x.TaskId">Delete</a>
                        </li>
                    }
                }
            </ul>
        </div>
        <div class="col-1"></div>
    </div>
</div>
